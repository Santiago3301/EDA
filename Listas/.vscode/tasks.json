{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build with gcc",
			"command": "gcc",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"problemMatcher": ["$gcc"]
		}
	]
}